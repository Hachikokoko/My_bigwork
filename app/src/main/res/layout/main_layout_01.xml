<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rela_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlue">

            <Button
                android:layout_toRightOf="@id/date_tv"
                android:id="@+id/daka"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="176dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/daka" />
            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="2020年00月00日"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/date_tv"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="10dp"
                android:text="12:00:00"
                android:textColor="@color/white"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/mingyan"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/date_tv"
                android:layout_marginTop="22dp"
                android:text="及时当勉励，岁月不待人。——陶渊明"
                android:textColor="@color/colorWhite"
                android:gravity="bottom"
                android:textSize="15sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/daiban"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/rela_01"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:text="待办"
            android:textColor="@color/colorblack" />
        <View
            android:layout_below="@id/daiban"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlue" />

        <ListView
            android:id="@+id/list_item"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_below="@+id/daiban"
            android:divider="@color/colorBlue"
            android:dividerHeight="1dp"
            android:layout_marginBottom="45dp"
            />
        <Button
            android:id="@+id/add_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/rela_01"
            android:layout_centerInParent="true"
            android:layout_marginTop="407dp"
            android:background="@drawable/add_after" />
    </RelativeLayout>


</LinearLayout>
